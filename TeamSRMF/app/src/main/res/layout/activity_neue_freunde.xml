<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
                <ListView
                            android:layout_width="fill_parent"
                            android:layout_height="348dp"
                            android:dividerHeight="2px"
                            android:id="@+id/neueFreundeList"
                            android:drawSelectorOnTop="true"
                            android:layout_gravity="center_horizontal"
                            android:choiceMode="multipleChoice"
                            android:clickable="true"
                            android:contextClickable="true"
                    android:fastScrollAlwaysVisible="false"
                    android:fastScrollEnabled="false" />
            </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alle"
            android:id="@+id/SelectAll"
            android:layout_weight="50"
            android:onClick="AllClicked"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Niemand"
            android:id="@+id/buttonLoad"
            android:layout_weight="50"
            android:onClick="NoneClicked"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anwenden"
        android:id="@+id/saveFilterData"
        android:onClick="speicherBenutzerListeClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Studienrichtung"
        android:id="@+id/SelectedItems"
        android:textSize="30dp"
        android:singleLine="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug, add element"
            android:id="@+id/debugAddElement"
            android:onClick="addItems" />



</LinearLayout>